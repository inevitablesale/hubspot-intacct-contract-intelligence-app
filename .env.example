# Server Configuration
PORT=3000
NODE_ENV=development

# HubSpot Configuration
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:3000/oauth/callback
HUBSPOT_APP_ID=your-hubspot-app-id

# Sage Intacct Configuration
INTACCT_COMPANY_ID=your-intacct-company-id
INTACCT_USER_ID=your-intacct-user-id
INTACCT_USER_PASSWORD=your-intacct-password
INTACCT_SENDER_ID=your-intacct-sender-id
INTACCT_SENDER_PASSWORD=your-intacct-sender-password
INTACCT_ENDPOINT=https://api.intacct.com/ia/xml/xmlgw.phtml

# Database (optional - for persistent token storage)
DATABASE_URL=sqlite::memory:

# Sync Configuration
SYNC_INTERVAL_MINUTES=60

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://app.hubspot.com
